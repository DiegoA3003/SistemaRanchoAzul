@model IEnumerable<RANCHO_AZUL.Models.Pedido>
@{
    ViewData["Title"] = "Pedidos Listos para Entregar";
}

<h2>Pedidos Listos para Entregar</h2>

@if (Model == null || !Model.Any())
{
    <p>No hay pedidos listos.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID Pedido</th>
                <th>Fecha</th>
                <th>Cliente</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.IdPedido</td>
                    <td>@p.FechaPedido</td>
                    <td>@p.UsuarioId</td>
                </tr>
            }
        </tbody>
    </table>
}

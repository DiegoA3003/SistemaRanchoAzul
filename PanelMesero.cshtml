@{
    ViewData["Title"] = "Panel de Mesero - Rancho Azul";
}

<div class="container mt-5">
    <div class="row mb-5 text-center">
        <div class="col-12">
            <h1 class="display-4 text-primary">Panel del Mesero</h1>
        </div>
    </div>

    <div class="row justify-content-center g-4">

        <!-- Card Tomar Pedido -->
        <div class="col-md-3">
            <div class="card admin-card text-center shadow-lg">
                <div class="card-body">
                    <i class="fas fa-plus-circle fa-3x text-white mb-3"></i>
                    <h5 class="card-title text-white">Tomar Pedido</h5>
                    <p class="card-text text-white-50">
                        Crear un nuevo pedido para una mesa
                    </p>
                    <a href="@Url.Action("TomarPedido", "Mesero")" class="btn btn-light btn-sm mt-2">
                        Ir a Tomar Pedido
                    </a>
                </div>
            </div>
        </div>

        <!-- Card Pedidos Activos -->
        <div class="col-md-3">
            <div class="card admin-card text-center shadow-lg">
                <div class="card-body">
                    <i class="fas fa-list-alt fa-3x text-white mb-3"></i>
                    <h5 class="card-title text-white">Pedidos Activos</h5>
                    <p class="card-text text-white-50">
                        Ver pedidos que están en preparación o listos
                    </p>
                    <a href="@Url.Action("PedidosActivos", "Mesero")" class="btn btn-light btn-sm mt-2">
                        Ver Pedidos Activos
                    </a>
                </div>
            </div>
        </div>

        <!-- Card Entregar Pedido -->
        <div class="col-md-3">
            <div class="card admin-card text-center shadow-lg">
                <div class="card-body">
                    <i class="fas fa-check-circle fa-3x text-white mb-3"></i>
                    <h5 class="card-title text-white">Entregar Pedido</h5>
                    <p class="card-text text-white-50">
                        Ver pedidos listos para entregar a los clientes
                    </p>
                    <a href="@Url.Action("ListasParaEntregar", "Orden")" class="btn btn-light btn-sm mt-2">
                        Ver Pedidos Listos
                    </a>
                </div>
            </div>
        </div>

        <!-- Card Ver Menú -->
        <div class="col-md-3">
            <div class="card admin-card text-center shadow-lg">
                <div class="card-body">
                    <i class="fas fa-utensils fa-3x text-white mb-3"></i>
                    <h5 class="card-title text-white">Ver Menú</h5>
                    <p class="card-text text-white-50">
                        Consultar los platillos disponibles
                    </p>
                    <a href="@Url.Action("Index", "Menu")" class="btn btn-light btn-sm mt-2">
                        Ver Menú
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>

<style>
    .admin-card {
        background: linear-gradient(145deg, #1D4ED8, #3B82F6);
        border-radius: 15px;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .admin-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 25px rgba(0,0,0,0.3);
        }

        .admin-card .card-text {
            font-size: 0.9rem;
        }

        .admin-card .btn {
            font-weight: 600;
        }
</style>

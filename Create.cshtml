@model RANCHO_AZUL.ViewModels.UsuarioVM

@{
    ViewData["Title"] = "Crear Nuevo Usuario";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-user-plus me-2"></i>
                        Registrar Nuevo Usuario
                    </h3>
                    <p class="mb-0 mt-2"><small>Crear cuenta para Mesero o Cocinero</small></p>
                </div>
                <div class="card-body p-4">

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.Error
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Create" method="post">

                        <div class="row">
                            <div class="col-12 mb-3">
                                <h5 class="text-secondary">
                                    <i class="fas fa-user me-2"></i>Información del Usuario
                                </h5>
                                <hr>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NombreUsuarioVM" class="form-label">
                                <i class="fas fa-user me-1"></i>
                                Nombre de Usuario <span class="text-danger">*</span>
                            </label>
                            <input asp-for="NombreUsuarioVM" class="form-control form-control-lg" placeholder="Ej: Juan Pérez" required pattern="[A-Za-zÁÉÍÓÚáéíóúÑñ ]+"
                                   title="Solo se permiten letras y espacios"
                                   oninput="this.value = this.value.replace(/[^A-Za-zÁÉÍÓÚáéíóúÑñ ]/g,'')" />
                            <span asp-validation-for="NombreUsuarioVM" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CorreoVM" class="form-label">
                                <i class="fas fa-envelope me-1"></i>
                                Correo Electrónico <span class="text-danger">*</span>
                            </label>
                            <input asp-for="CorreoVM" type="email" class="form-control form-control-lg" placeholder="usuario@ranchoazul.com" required />
                            <span asp-validation-for="CorreoVM" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RolIdVM" class="form-label">
                                <i class="fas fa-user-tag me-1"></i>
                                Rol del Usuario <span class="text-danger">*</span>
                            </label>
                            <select asp-for="RolIdVM" class="form-select form-select-lg" asp-items="ViewBag.Roles" required>
                                <option value="">-- Selecciona un rol --</option>
                            </select>
                            <span asp-validation-for="RolIdVM" class="text-danger"></span>
                            <small class="text-muted">Define si será Mesero o Cocinero</small>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12 mb-3">
                                <h5 class="text-secondary">
                                    <i class="fas fa-lock me-2"></i>Contraseña
                                </h5>
                                <hr>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ContrasenaVM" class="form-label">
                                    <i class="fas fa-key me-1"></i>
                                    Contraseña <span class="text-danger">*</span>
                                </label>
                                <input asp-for="ContrasenaVM" type="password" class="form-control form-control-lg" placeholder="Mínimo 6 caracteres" required minlength="6" pattern="^(?=.*[A-Z])(?=.*[\W_]).{6,}$"
                                       title="Debe contener al menos una mayúscula y un carácter especial." />
                                <span asp-validation-for="ContrasenaVM" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ConfirmarContrasenaVM" class="form-label">
                                    <i class="fas fa-key me-1"></i>
                                    Confirmar Contraseña <span class="text-danger">*</span>
                                </label>
                                <input asp-for="ConfirmarContrasenaVM" type="password" class="form-control form-control-lg" placeholder="Repite la contraseña" required minlength="6" pattern="^(?=.*[A-Z])(?=.*[\W_]).{6,}$"
                                       title="Debe contener al menos una mayúscula y un carácter especial." />
                                <span asp-validation-for="ConfirmarContrasenaVM" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>Registrar Usuario
                            </button>
                            <a asp-action="ListUsuarios" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control:focus,
    .form-select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    .card {
        border-radius: 15px;
    }

    .form-label {
        font-weight: 500;
        color: #495057;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Validar que las contraseñas coincidan en tiempo real
        document.getElementById('ConfirmarContrasenaVM').addEventListener('input', function() {
            const password = document.getElementById('ContrasenaVM').value;
            const confirmPassword = this.value;

            if (password !== confirmPassword) {
                this.setCustomValidity('Las contraseñas no coinciden');
            } else {
                this.setCustomValidity('');
            }
        });
    </script>
}
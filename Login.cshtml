@model RANCHO_AZUL.ViewModels.LoginVM
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null; // Quitamos el layout para diseño independiente
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rancho Azul</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .login-container {
            background: linear-gradient(rgba(10, 60, 120, 0.9), rgba(40, 120, 200, 0.9)), url('https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80');
            background-size: cover;
            background-position: center;
            min-height: 100vh;
            display: flex;
            align-items: center;
        }

        .login-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
            overflow: hidden;
            max-width: 400px;
            width: 100%;
        }

        .login-header {
            background: linear-gradient(135deg, #0a3c78, #2878c8);
            color: white;
            padding: 30px 20px;
            text-align: center;
        }

        .login-body {
            padding: 30px;
        }

        .btn-login {
            background: linear-gradient(135deg, #0a3c78, #2878c8);
            border: none;
            color: white;
            padding: 12px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-login:hover {
                background: linear-gradient(135deg, #082c5a, #1f5ea0);
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(40, 120, 200, 0.3);
            }

        .form-control:focus {
            border-color: #2878c8;
            box-shadow: 0 0 0 0.2rem rgba(40, 120, 200, 0.25);
        }

        .divider {
            display: flex;
            align-items: center;
            text-align: center;
            margin: 20px 0;
        }

            .divider::before,
            .divider::after {
                content: '';
                flex: 1;
                border-bottom: 1px solid #dee2e6;
            }

            .divider span {
                padding: 0 10px;
                color: #6c757d;
                font-size: 0.9rem;
            }

        .register-section {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
            margin-top: 15px;
        }

        .btn-register {
            background: linear-gradient(135deg, #28a745, #20c997);
            border: none;
            color: white;
            padding: 10px 20px;
            font-weight: 600;
            border-radius: 8px;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

            .btn-register:hover {
                background: linear-gradient(135deg, #218838, #1ba87f);
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(40, 167, 69, 0.3);
            }

        .back-link {
            color: #6c757d;
            transition: color 0.3s ease;
        }

            .back-link:hover {
                color: #2878c8;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-card">
                        <div class="login-header">
                            <i class="fas fa-utensils fa-3x mb-3"></i>
                            <h3>Rancho Azul</h3>
                            <p class="mb-0">Sistema de Gestión</p>
                        </div>
                        <div class="login-body">
                            <form asp-action="Login" autocomplete="off">
                                <div class="mb-3">
                                    <label asp-for="CorreoVM" class="form-label">
                                        <i class="fas fa-envelope me-2"></i>Email
                                    </label>
                                    <input asp-for="CorreoVM" class="form-control" type="email" placeholder="usuario@ejemplo.com" required>
                                </div>
                                <div class="mb-4">
                                    <label asp-for="ContrasenaVM" class="form-label">
                                        <i class="fas fa-lock me-2"></i>Contraseña
                                    </label>
                                    <input asp-for="ContrasenaVM" class="form-control" type="password" placeholder="Ingresa tu contraseña" required>
                                </div>

                                <button type="submit" class="btn btn-login w-100 mb-3">
                                    <i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión
                                </button>

                                <div class="text-center">
                                    <a href="@Url.Action("Index", "Home")" class="text-decoration-none back-link">
                                        <i class="fas fa-arrow-left me-1"></i>Volver al Inicio
                                    </a>
                                </div>
                            </form>

                            @if (ViewBag.Error != null)
                            {
                                <div class="alert alert-danger mt-3 text-center">
                                    <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.Error
                                </div>
                            }

                            <!-- Sección de Registro -->
                            <div class="divider">
                                <span>¿Aún no tienes cuenta?</span>
                            </div>

                            <div class="register-section">
                                <p class="mb-3 text-muted">
                                    <i class="fas fa-user-plus me-2"></i>
                                    Únete a Rancho Azul y disfruta de nuestros servicios
                                </p>
                                <a href="@Url.Action("Registrar", "Acceso")" class="btn btn-register">
                                    <i class="fas fa-user-plus me-2"></i>Registrarse Aquí
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
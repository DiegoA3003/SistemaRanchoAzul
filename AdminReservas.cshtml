@model IEnumerable<RANCHO_AZUL.Models.Reserva>

@{
    ViewData["Title"] = "Panel - Reservas";
}

<div class="container mt-5">
    <h1 class="text-primary mb-4">
        <i class="fas fa-calendar-alt me-2"></i> Panel de Reservas
    </h1>

    <!-- RESUMEN + FILTRO + EXPORTACIÓN -->
    <div class="row mb-4">
        <!-- Totales -->
        <div class="col-md-4">
            <div class="card shadow text-center border-0">
                <div class="card-body">
                    <h5 class="text-primary">Reservas Activas</h5>
                    <h2 class="fw-bold">@Model.Count(r => r.Estado && r.Fecha.Date >= DateTime.Now.Date)</h2>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow text-center border-0">
                <div class="card-body">
                    <h5 class="text-success">Reservas Hoy</h5>
                    <h2 class="fw-bold">@Model.Count(r => r.Estado && r.Fecha.Date == DateTime.Now.Date)</h2>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow text-center border-0">
                <div class="card-body">
                    <h5 class="text-danger">Canceladas</h5>
                    <h2 class="fw-bold">@Model.Count(r => !r.Estado)</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- FILTRO POR FECHA -->
    <form method="get" asp-action="AdminReservas" class="mb-4">
        <div class="row g-3 align-items-end">
            <div class="col-md-4">
                <label for="fechaFiltro" class="form-label">Filtrar por fecha</label>
                <input type="date" id="fechaFiltro" name="fecha" class="form-control" />
            </div>

            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search me-2"></i>Filtrar
                </button>
            </div>

            <div class="col-md-3">
                <a href="@Url.Action("AdminReservas", "Reserva")" class="btn btn-secondary w-100">
                    <i class="fas fa-redo me-2"></i>Quitar Filtros
                </a>
            </div>

            <div class="col-md-2">
                <a href="@Url.Action("ExportarReservasPDF", "Reserva")" class="btn btn-danger w-100" target="_blank">
                    <i class="fas fa-file-pdf me-2"></i>PDF
                </a>
            </div>
        </div>
    </form>

    <!-- TABLA -->
    <div class="card shadow-lg border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="table-primary">
                        <tr>
                            <th class="text-center">
                                <i class="fas fa-hashtag me-1"></i>#
                            </th>
                            <th>
                                <i class="fas fa-user me-1"></i>Cliente
                            </th>
                            <th>
                                <i class="fas fa-chair me-1"></i>Mesa
                            </th>
                            <th>
                                <i class="fas fa-calendar me-1"></i>Fecha
                            </th>
                            <th>
                                <i class="fas fa-clock me-1"></i>Hora
                            </th>
                            <th class="text-center">
                                <i class="fas fa-toggle-on me-1"></i>Estado
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    <strong class="badge bg-primary fs-6">#@r.IdReserva</strong>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle me-2">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <strong>@r.Clientes.PrimNombre @r.Clientes.ApellidoP</strong>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-info fs-6">
                                        Mesa @r.Mesas.NumMesa (Cap: @r.Mesas.Capacidad)
                                    </span>
                                </td>
                                <td>@r.Fecha.ToString("dd/MM/yyyy")</td>
                                <td>@r.Hora.ToString("hh:mm tt")</td>
                                <td class="text-center">
                                    @if (r.Estado)
                                    {
                                        <span class="badge bg-success fs-6">
                                            <i class="fas fa-check-circle me-1"></i>Activa
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger fs-6">
                                            <i class="fas fa-times-circle me-1"></i>Cancelada
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a href="@Url.Action("PanelAdmin", "Admin")" class="btn btn-secondary btn-lg">
            <i class="fas fa-arrow-left me-1"></i> Volver al Panel
        </a>
    </div>
</div>

<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.2rem;
    }

    .table tbody tr {
        transition: all 0.3s ease;
    }

        .table tbody tr:hover {
            background-color: #f8f9fa;
            transform: scale(1.01);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .card {
        border-radius: 15px;
        overflow: hidden;
    }
</style>
@model RANCHO_AZUL.ViewModels.UsuarioVM
@{
    ViewData["Title"] = "Registrarse";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rancho Azul</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .login-container {
            background: linear-gradient(rgba(10, 60, 120, 0.9), rgba(40, 120, 200, 0.9)), url('https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80');
            background-size: cover;
            background-position: center;
            min-height: 100vh;
            display: flex;
            align-items: center;
        }

        .login-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
            overflow: hidden;
            max-width: 500px;
            width: 100%;
        }

        .login-header {
            background: linear-gradient(135deg, #0a3c78, #2878c8);
            color: white;
            padding: 25px 20px;
            text-align: center;
        }

        .login-body {
            padding: 25px;
        }

        .btn-login {
            background: linear-gradient(135deg, #0a3c78, #2878c8);
            border: none;
            color: white;
            padding: 12px;
            font-weight: 600;
        }

            .btn-login:hover {
                background: linear-gradient(135deg, #082c5a, #1f5ea0);
                color: white;
            }

        .form-control:focus {
            border-color: #2878c8;
            box-shadow: 0 0 0 0.2rem rgba(40, 120, 200, 0.25);
        }

        .text-link-blue {
            color: #2878c8;
        }

            .text-link-blue:hover {
                color: #0a3c78;
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-5">
                    <div class="login-card">
                        <div class="login-header">
                            <i class="fas fa-user-plus fa-2x mb-3"></i>
                            <h4>Crear Cuenta</h4>
                            <p class="mb-0">Rancho Azul - Sabores de la Sierra</p>
                        </div>
                        <div class="login-body">
                            <form asp-action="Registrar" autocomplete="off">
                                <div class="mb-3">
                                    <label asp-for="NombreUsuarioVM" class="form-label">
                                        <i class="fas fa-user me-2"></i>Nombre de Usuario *
                                    </label>
                                    <input asp-for="NombreUsuarioVM" class="form-control" placeholder="Ingresa tu nombre de usuario" required pattern="[A-Za-zÁÉÍÓÚáéíóúÑñ\s]+"
                                           title="Solo se permiten letras.">
                                    <span asp-validation-for="NombreUsuarioVM" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CorreoVM" class="form-label">
                                        <i class="fas fa-envelope me-2"></i>Correo Electrónico *
                                    </label>
                                    <input asp-for="CorreoVM" class="form-control" type="email" placeholder="usuario@ejemplo.com" required>
                                    <span asp-validation-for="CorreoVM" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ContrasenaVM" class="form-label">
                                        <i class="fas fa-lock me-2"></i>Contraseña *
                                    </label>
                                    <input asp-for="ContrasenaVM" class="form-control" type="password" placeholder="Mínimo 6 caracteres" required minlength="6" pattern="^(?=.*[A-Z])(?=.*[\W_]).{6,}$"
                                           title="Debe contener al menos una mayúscula y un carácter especial.">
                                    <span asp-validation-for="ContrasenaVM" class="text-danger small"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="ConfirmarContrasenaVM" class="form-label">
                                        <i class="fas fa-lock me-2"></i>Confirmar Contraseña *
                                    </label>
                                    <input asp-for="ConfirmarContrasenaVM" class="form-control" type="password" placeholder="Repite tu contraseña" required minlength="6" pattern="^(?=.*[A-Z])(?=.*[\W_]).{6,}$"
                                           title="Debe contener al menos una mayúscula y un carácter especial.">
                                    <span asp-validation-for="ConfirmarContrasenaVM" class="text-danger small"></span>
                                </div>

                                <div class="mb-3 form-check">
                                    <input type="checkbox" class="form-check-input" id="terminos" required>
                                    <label class="form-check-label" for="terminos">
                                        Acepto los <a href="#" class="text-link-blue">términos y condiciones</a>
                                    </label>
                                </div>

                                <button type="submit" class="btn btn-login w-100 mb-3">
                                    <i class="fas fa-user-plus me-2"></i>Registrarse
                                </button>

                                <div class="text-center">
                                    <p class="mb-2">¿Ya tienes cuenta?</p>
                                    <a href="@Url.Action("Login", "Acceso")" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-sign-in-alt me-1"></i>Iniciar Sesión
                                    </a>
                                    <a href="@Url.Action("Index", "Home")" class="btn btn-link text-decoration-none d-block mt-2 text-link-blue">
                                        <i class="fas fa-arrow-left me-1"></i>Volver al Inicio
                                    </a>
                                </div>
                            </form>

                            @if (ViewBag.Error != null)
                            {
                                <div class="alert alert-danger mt-3 text-center">
                                    <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.Error
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@model IEnumerable<RANCHO_AZUL.Models.Menu>
@{
    ViewData["Title"] = "Administración de Menús";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-5 text-success">
                    <i class="fas fa-utensils me-2"></i>Administración de Menús
                </h1>
                <div>
                    <a href="@Url.Action("Create", "Menu")" class="btn btn-success me-2">
                        <i class="fas fa-plus me-2"></i>Nuevo Platillo
                    </a>
                    <a href="@Url.Action("Index", "Menu")" class="btn btn-outline-success">
                        <i class="fas fa-eye me-2"></i>Ver Menú Público
                    </a>
                </div>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-list me-2"></i>Lista de Platillos
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Categoría</th>
                                        <th>Precio</th>
                                        <th>Descripción</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td><strong>@item.Nombre</strong></td>
                                            <td><span class="badge bg-info">@item.CategoriaMenus?.NombreDeCategoria</span></td>
                                            <td><span class="fw-bold text-success">S/. @item.Precio.ToString("0.00")</span></td>
                                            <td><small class="text-muted">@item.Descripcion</small></td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="@Url.Action("Edit", "Menu", new { id = item.IdMenu })" class="btn btn-warning">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="@Url.Action("Delete", "Menu", new { id = item.IdMenu })" class="btn btn-danger">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-utensils fa-3x text-muted mb-3"></i>
                            <h4>No hay platillos registrados</h4>
                            <a href="@Url.Action("Create", "Menu")" class="btn btn-success">
                                <i class="fas fa-plus me-2"></i>Agregar Primer Platillo
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
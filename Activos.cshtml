@model IEnumerable<RANCHO_AZUL.Models.Pedido>

@{
    ViewData["Title"] = "Pedidos Activos - Mesero";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="text-primary">
                <i class="fas fa-clipboard-list me-2"></i>Pedidos Activos
            </h2>
            <p class="text-muted">Pedidos confirmados por los clientes</p>
        </div>
        <div class="col-md-6 text-end">
            <a href="@Url.Action("PanelMesero", "Mesero")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Volver al Panel
            </a>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="card shadow-lg border-0">
            <div class="card-body text-center py-5">
                <i class="fas fa-inbox fa-5x text-muted mb-4"></i>
                <h4 class="text-muted">No hay pedidos activos en este momento</h4>
                <p class="text-muted">Los pedidos confirmados por los clientes aparecerán aquí</p>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-list me-2"></i>
                            Total de Pedidos: @Model.Count()
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0 align-middle">
                                <thead class="table-dark">
                                    <tr>
                                        <th class="text-center">
                                            <i class="fas fa-hashtag me-1"></i>ID Pedido
                                        </th>
                                        <th>
                                            <i class="fas fa-calendar me-1"></i>Fecha y Hora
                                        </th>
                                        <th>
                                            <i class="fas fa-user me-1"></i>Cliente
                                        </th>
                                        <th class="text-center">
                                            <i class="fas fa-utensils me-1"></i>Platos
                                        </th>
                                        <th class="text-center">
                                            <i class="fas fa-dollar-sign me-1"></i>Total
                                        </th>
                                        <th class="text-center">
                                            <i class="fas fa-traffic-light me-1"></i>Estado
                                        </th>
                                        <th class="text-center">
                                            <i class="fas fa-cog me-1"></i>Acción
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var pedido in Model)
                                    {
                                        var totalPlatos = pedido.DetalleMenuPedidos?.Sum(d => d.Cantidad) ?? 0;
                                        var totalPrecio = pedido.DetalleMenuPedidos?.Sum(d => d.Cantidad * d.Menu.Precio) ?? 0;

                                        <tr>
                                            <td class="text-center">
                                                <strong class="badge bg-primary fs-6">
                                                    #@pedido.IdPedido
                                                </strong>
                                            </td>
                                            <td>
                                                <div class="d-flex flex-column">
                                                    <span class="fw-bold">
                                                        <i class="far fa-calendar-alt me-1 text-primary"></i>
                                                        @pedido.FechaPedido.ToString("dd/MM/yyyy")
                                                    </span>
                                                    <small class="text-muted">
                                                        <i class="far fa-clock me-1"></i>
                                                        @pedido.FechaPedido.ToString("HH:mm:ss")
                                                    </small>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-circle me-2">
                                                        <i class="fas fa-user"></i>
                                                    </div>
                                                    <div>
                                                        <strong class="text-dark">@pedido.Usuario?.NombreUsuario</strong>
                                                        <br>
                                                        <small class="text-muted">
                                                            <i class="fas fa-envelope me-1"></i>
                                                            @pedido.Usuario?.Correo
                                                        </small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-info fs-6">
                                                    <i class="fas fa-utensils me-1"></i>
                                                    @totalPlatos plato@(totalPlatos != 1 ? "s" : "")
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <strong class="text-success fs-5">
                                                    S/. @totalPrecio.ToString("0.00")
                                                </strong>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-warning text-dark fs-6">
                                                    <i class="fas fa-clock me-1"></i>
                                                    Pendiente
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <a href="@Url.Action("DetallesPedido", "Pedidos", new { id = pedido.IdPedido })"
                                                   class="btn btn-primary btn-sm">
                                                    <i class="fas fa-eye me-1"></i>
                                                    Ver Detalles
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.2rem;
    }

    .table tbody tr {
        transition: all 0.3s ease;
    }

        .table tbody tr:hover {
            background-color: #f8f9fa;
            transform: scale(1.01);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .card {
        border-radius: 15px;
        overflow: hidden;
    }

    .btn-primary {
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(13, 110, 253, 0.4);
        }
</style>

<script>
    // Auto-actualizar cada 30 segundos
    setTimeout(function() {
        location.reload();
    }, 30000);

    // Auto-cerrar alertas
    setTimeout(function() {
        $('.alert').fadeOut('slow');
    }, 5000);
</script>
